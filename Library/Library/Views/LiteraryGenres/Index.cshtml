@model IEnumerable<Library.DAL.Entities.LiteraryGenre>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />

<h1>Género literario</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Nuevo género</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="LiteraryTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifiedDate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var literary in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => literary.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => literary.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => literary.CreatedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => literary.ModifiedDate)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@literary.Id" class="btn btn-outline-warning">Editar</a>
                                    <a asp-action="Details" asp-route-id="@literary.Id" class="btn btn-outline-info">Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@literary.Id" class="btn btn-outline-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#LiteraryTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu":
                    [
                        [5, 25, 50, 100, 200, -1],
                        [5, 25, 50, 100, 200, "Todos"]
                    ]
            });
        });
    </script>
}