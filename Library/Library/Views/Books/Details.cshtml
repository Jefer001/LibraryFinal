@model Library.DAL.Entities.Book

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<div>
    <partial name="../Shared/PartialViews/_BookDetails" />
</div>

<div>
    <a asp-action="AddImage" asp-route-bookId="@Model?.Id" class="btn btn-outline-primary">Adicionar Imagen</a>
    <a asp-action="AddCatalogue" asp-route-bookId="@Model?.Id" class="btn btn-outline-secondary">Adicionar Catálogo</a>
    <a asp-action="Edit" asp-route-bookId="@Model?.Id" class="btn btn-outline-warning">Editar libro</a>
    <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Imágenes</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="ImagesTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.BookImages.FirstOrDefault().ImageFullPath)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var image in Model.BookImages)
                        {
                            <tr>
                                <td>
                                    <img src="@image.ImageFullPath" style="width:150px;" />
                                </td>
                                <td>
                                    <a asp-action="DeleteImage" asp-route-imageId="@image.Id" class="btn btn-outline-danger">Borrar Imagen</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Catálogos</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="CataloguesTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.BookCatalogues.FirstOrDefault().Catalogue.Name)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.BookCatalogues)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Catalogue.Name)
                                </td>
                                <td>
                                    <a asp-action="DeleteCatalogue" asp-route-bookId="@item.Id" class="btn btn-outline-danger">Borrar Catálogo</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#ImagesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
            $('#CataloguesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}