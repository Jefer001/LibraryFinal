@model Library.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Cambio de Contraseña</h2>
        <form method="post">
            @*<form asp-action="ChangePassword">*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="OldPassword" type="password" class="form-control" placeholder="OldPassword" />
                <label asp-for="OldPassword"></label>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="NewPassword" />
                <label asp-for="NewPassword"></label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="Confirm" type="password" class="form-control" placeholder="Confirm" />
                <label asp-for="Confirm"></label>
                <span asp-validation-for="Confirm" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group mt-2">
                <input type="submit" value="Cambiar Contraseña" class="btn btn-outline-primary" />
                <a asp-action="EditUser" class="btn btn-outline-success">Regresar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}