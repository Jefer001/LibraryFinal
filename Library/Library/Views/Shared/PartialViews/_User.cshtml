@model Library.Models.EditUserViewModel

<div class="row">
    <div class="col-md-6">
        <div class="form-floating mb-3">
            <input asp-for="Document" class="form-control" placeholder="Document" />
            <label asp-for="Document" class="control-label"></label>
            <span asp-validation-for="Document" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
            <label asp-for="FirstName" class="control-label"></label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="LastName" class="form-control" placeholder="LastName" />
            <label asp-for="LastName" class="control-label"></label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Address" class="form-control" placeholder="Address" />
            <label asp-for="Address" class="control-label"></label>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
            <label asp-for="PhoneNumber" class="control-label"></label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="input-group mb-3">
            <label asp-for="ImageFile" class="input-group-text"></label>
            <input asp-for="ImageFile" class="form-control" type="file" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <br />
        <div class="input-group mb-3">
            <label asp-for="UniversityId" class="input-group-text"></label>
            <select asp-for="UniversityId" asp-items="Model.Universities" class="form-control"></select>
            <span asp-validation-for="UniversityId" class="text-danger"></span>
        </div>
    </div>
</div>